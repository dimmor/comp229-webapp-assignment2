<!-- Contact me view template -->
<%- include partials/header.ejs %>

<%- include partials/main_nav.ejs %>

<main class="container"> 
  <div class="jumbotron">
    <h4 class="display-4">Welcome to the <%= title %> page</h4>    
  </div>
<div style="width:980px; margin-left:auto; margin-right:auto;">
<h3>To contact me please fill out this form:</h3>
<br>
<!-- form -->
<div class="container">
  <form action="/">
    <p>
    <label for="fname">First Name</label>
    <input type="text" id="fname" name="firstname" tabindex="01" required>
    </p>
    <p>
    <label for="lname">Last Name</label>
    <input type="text" id="lname" name="lastname" tabindex="03" required>
    </p>
    <p>
    <label for="phone">Phone number</label>
    <input type="text" id="phone" name="phone" tabindex="05" required>
    </p>
    <p>
    <label for="email">Email</label>
    <input type="text" id="email" name="email" tabindex="07" required>    
    </p>
    <p>
    <label for="message">Message</label>
    <textarea id="subject" name="message" style="height:150px" tabindex="09" required></textarea>
    </p>    
    &nbsp;&nbsp;&nbsp;&nbsp;<input type="submit" value="Submit form" name="submit" tabindex="11">&nbsp;&nbsp;&nbsp;&nbsp;<input type="reset" value="Clear all fields" name="reset" tabindex="13">    
  </form>
</div>
<br>
<br>
<br>
</div>
</main>

<%- include partials/bottom_nav.ejs %>
  
<%- include partials/footer.ejs %>
